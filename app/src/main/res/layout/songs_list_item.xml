<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single songs' list item -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/songs_list_item_height"
    android:background="@color/app_background"
    android:minHeight="@dimen/songs_list_item_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/songs_list_item_height"
        android:layout_height="@dimen/songs_list_item_height"
        android:layout_alignParentLeft="true"
        android:alpha="0.75"
        android:padding="@dimen/image_padding"
        android:scaleType="centerCrop"
        tools:src="@drawable/seventies_image_1" />

    <ImageView
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/play_button_margin_left"
        android:alpha="0.85"
        android:src="@drawable/play_icon" />

    <TextView
        android:id="@+id/artist_text_view"
        style="@style/artist_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/artist_title_item_height"
        android:gravity="bottom"
        android:paddingTop="@dimen/artist_padding_top"
        android:textAppearance="?android:textAppearanceListItem"
        android:textStyle="bold"
        tools:text="Debby Boone" />

    <TextView
        android:id="@+id/title_text_view"
        style="@style/artist_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/artist_text_view"
        android:layout_marginBottom="@dimen/title_margin_bottom"
        android:gravity="top"
        android:textAppearance="?android:textAppearanceListItemSecondary"
        tools:text="You Light Up My Life" />

    <ImageView
        android:layout_width="@dimen/download_button_size"
        android:layout_height="@dimen/play_button_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/download_margin_right"
        android:src="@drawable/download_icon" />

</RelativeLayout>