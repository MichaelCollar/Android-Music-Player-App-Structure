<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorPrimary">@color/app_bar_color</item>
    </style>

    <!-- Style for a category tab -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/neon</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#a3b7ad</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for Artist and Title TextView from Song List Item layout -->
    <style name="artist_title" parent="TextAppearance.AppCompat">
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:layout_marginRight">@dimen/artist_title_item_margin_right</item>
        <item name="android:fontFamily">@font/neon</item>
        <item name="android:textColor">@color/title_artist</item>
    </style>

</resources>